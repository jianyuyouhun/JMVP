<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaxHeightLinearLayout">
        <attr name="maxHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_shape_style" format="enum">
            <enum name="normal" value="1"/>
            <enum name="circle" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ProportionLayout">
        <attr name="scaleSize" format="float" />
        <attr name="isAdaptive" format="boolean" />
        <attr name="ppLayoutOrientation">
            <enum name="HORIZONTAL" value="0" />
            <enum name="VERTICAL" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="BufferView">
        <attr name="mBackgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="mSlCornerRadius" format="dimension"/>
        <attr name="mSlShadowRadius" format="dimension"/>
        <attr name="mSlShadowColor" format="color"/>
        <attr name="mSlOffsetX" format="dimension"/>
        <attr name="mSlOffsetY" format="dimension"/>
    </declare-styleable>
</resources>