<?xml version="1.0" encoding="utf-8"?>
<com.jianyuyouhun.jmvplib.view.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    app:mSlCornerRadius="48dp"
    app:mSlOffsetX="1dp"
    app:mSlOffsetY="1dp"
    app:mSlShadowColor="#11000000"
    app:mSlShadowRadius="1dp">

    <LinearLayout
        android:id="@+id/tips_all_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_hangup_tips_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_msg_tips_icon"/>

        <TextView
            android:id="@+id/tips_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:text="@string/msg_on_new_msg"
            android:textColor="#333333"
            android:textSize="15sp"/>
    </LinearLayout>
</com.jianyuyouhun.jmvplib.view.ShadowLayout>
