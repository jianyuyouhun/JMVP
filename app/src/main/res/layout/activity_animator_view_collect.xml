<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center">
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_background="@color/white"
            app:sb_button_color="#f7f7f7"
            app:sb_checked_color="@color/green"
            app:sb_uncheckcircle_color="@color/transparent"
            app:sb_checkline_color="@color/transparent"
            app:sb_border_width="2px"
            app:sb_shadow_radius="2dp"
            app:sb_shadow_offset="2dp"
            app:sb_show_indicator="true"/>
        <TextView
            android:id="@+id/switch_state"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>